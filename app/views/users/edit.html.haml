.container.user-new
  = form_for @user do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :nickname, placeholder: 'Username', autofocus: true
            .user-image.col-md-2
              = button_tag 'Change Image', class: 'btn btn-primary'
              = f.file_field :avatar
          = f.email_field :email, placeholder: "E-Mail", class: 'user-email'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: ''
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: '30', rows: '4', placeholder: 'Profile'
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :work, cols: '30', rows: '4', placeholder: 'Works'
      .row.text-center.user-btn
        = f.submit 'Save', class: 'btn btn-lg btn-primary btn-block'
