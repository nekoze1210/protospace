.container.user-new
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

          = devise_error_messages!
          %h2 Register

          .user-name_image.row
            .user-name.col-md-10

              =f.text_field :nickname, autofocus:true, placeholder: 'Username'

            .user-image.col-md-2.js-preview-images
              %button.btn.btn-primary Add image
              = f.file_field :avatar

          = f.email_field :email, class: 'user-email', placeholder: 'E-Mail'

          = f.password_field :password, class: 'user-password', placeholder: 'password'

          = f.password_field :password_confirmation, class: 'user-password', placeholder: 'password(Confirm)'

          .col-md-12
          %h4 Member of

          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: 'Member'

          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: '30', rows: '4', placeholder: 'Profile'

          %h4 Works

          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :work, cols: '30', rows: '4', placeholder: 'Works'
          .row.text-center.user-btn
            =f.submit class: 'btn btn-lg btn-primary btn-block'
